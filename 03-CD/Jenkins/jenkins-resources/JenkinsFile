pipeline {
    agent any
    environment {
        JENKINS_DIRECTORY = '03-CD/Jenkins/jenkins-resources/'
    }

    stages {
        stage('Compile') {
            steps {
                dir("${JENKINS_DIRECTORY}") {
                    sh '''
                        gradlew compileJava
                        ls
                    '''
                }
            }
        }

        stage('Unit Tests') {
            steps {
                dir("${JENKINS_DIRECTORY}") {
                    sh '''
                        gradlew test
                    '''
                }
            }
        }
    }
}